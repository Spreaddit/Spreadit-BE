pipeline {
        agent any
    stages {
        stage('clone repo') {
            steps {
                sh 'sudo rm -rf Spreadit-BE && git clone https://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@github.com/Spreaddit/Spreadit-BE.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'echo "Installing Dependencies"'
                // Install backend dependencies
                sh 'cd Spreadit-BE && npm install'

            }
        }
        
        stage('Run Server') {
            steps {
                sh 'cd Spreadit-BE/src && pm2 list && sudo pm2 start app.js && pm2 list && pm2 save'
            }
        }
    }
}
